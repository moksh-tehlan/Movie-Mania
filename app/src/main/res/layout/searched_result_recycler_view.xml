<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/secondaryColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/searchedResultClick"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/searched_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iron Man"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/searched_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/ulselectedNavButtonColor"/>
                <TextView
                    android:id="@+id/searched_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/ulselectedNavButtonColor"/>


            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="@color/ulselectedNavButtonColor"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>